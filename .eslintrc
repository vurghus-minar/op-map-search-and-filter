{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "react/prop-types": 0,
        "no-extra-semi": "error",
        "semi": "error",
        "indent": [
            "error",
            4
        ]
    }
}